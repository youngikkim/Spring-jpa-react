spring.application.name=ReactAPI

spring.mvc.view.prefix=/WEB-INF/views/
spring.mvc.view.suffix=.jsp
mybatis.mapper-locations= mybatis/mapper/*.xml




# 로그 패턴 지정 (콘솔 출력)
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n


# JSP 파일 관련 로그는 INFO로 설정
logging.level.org.springframework.web.servlet.view=INFO

logging.level.org.mybatis.spring.SqlSessionUtils=WARN
logging.level.org.springframework.jdbc.datasource=WARN
logging.level.com.zaxxer.hikari=WARN

# Root 로그 레벨을 WARN으로 설정해 불필요한 디버그 로그 제거
logging.level.root=WARN

# 에러 로그 레벨 설정
logging.level.org.springframework=INFO
logging.level.org.springframework.boot=ERROR

# MyBatis Mapper 및 SQL 로그는 DEBUG로 설정 (필요한 쿼리 정보만 출력)
logging.level.org.springframework.web=DEBUG

# MyBatis SQL 쿼리 및 파라미터 로그 출력
logging.level.org.apache.ibatis=DEBUG
logging.level.org.mybatis=DEBUG

# 데이터베이스 설정 (MSSQL)
spring.datasource.url=jdbc:p6spy:sqlserver://localhost:1433;databaseName=kb
spring.datasource.username=sa
spring.datasource.password=rladuddlr3
spring.datasource.driver-class-name=com.microsoft.sqlserver.jdbc.SQLServerDriver

# HikariCP 설정 (커넥션 풀)
spring.datasource.hikari.driver-class-name=com.p6spy.engine.spy.P6SpyDriver

# 실행되는 쿼리 콘솔에 출력
spring.jpa.properties.hibernate.show_sql=ture

# 콘솔창에 출력되는 쿼리를 가독성 좋게
spring.jpa.properties.hibernate.format_sql=ture

# 콘솔창에 물음표 출력되는 바인드 파라미터 출력
spring.jpa.properties.hibernate.descriptor.sql=ture

spring.jpa.hibernate.ddl-auto=update



